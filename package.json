{
	"name": "ipro-react",
	"version": "1.0.0",
	"description": "Custom Clothing Store",
	"main": "server.js",
	"scripts": {
		"build": "cd client && npm run build",
		"install-client": "cd client && npm install",
		"heroku-postbuild": "npm run install-client && npm run build",
		"json-server": "json-server --watch db.json --port 3004",
		"server": "node server.js",
		"start": "concurrently \"npm run server\" \"npm run json-server\" ",
		"client": "cd client && npm start",
		"app": "concurrently \" npm run client\"  \"npm run server\" \"npm run json-server \""
	},
	"keywords": [
		"Clothing",
		"E-commerce",
		"Shopping"
	],
	"author": "Ekene Idiagbor",
	"license": "MIT",
	"dependencies": {
		"bcrypt": "^4.0.1",
		"concurrently": "^5.1.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"jsonwebtoken": "^9.0.0",
		"mongoose": "^5.9.7"
	},
	"devDependencies": {
		"nodemon": "^2.0.2"
	},
	"engines": {
		"node": "10.15.3"
	}
}
